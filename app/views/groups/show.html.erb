<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Info:</strong>
  <%= @group.info %>
</p>

<% if !@users.empty? %>
  <h1>List of Users</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% if logged_in? %>
  <%= link_to 'Join', :controller => 'groups', :action => 'add_user', :group_id => @group.id, :user_id => current_user.id, method: :post %>
  <%= link_to 'Leave', :controller => 'groups', :action => 'delete_user', :group_id => @group.id, :user_id => current_user.id, method: :delete %>
<% end %>


<br>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
